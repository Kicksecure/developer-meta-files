#!/bin/bash

## This file is part of Whonix.
## Copyright (C) 2012 - 2014 Patrick Schleizer <adrelanos@riseup.net>
## See the file COPYING for copying conditions.

## usage:
## ./debug-steps/reprepro-wrapper listmatched local "*"

set -x

ROOT_CHECK="0"
WHONIX_BUILD_PARSED="1"
VMNAME="internalrun"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd "$MYDIR"

source ../../Whonix/help-steps/pre
source ../../Whonix/help-steps/variables

reprepro_wrapper() {

   reprepro \
      $WHONIX_BUILD_REPREPRO_FOLDER_OPTIONS \
      ${1+"$@"}
}

true "${bold}INFO: Currently running script: $0 ${1+"$@"}${reset}"
reprepro_wrapper ${1+"$@"}
true "${bold}INFO: End of: $0 No error detected.${reset}"
